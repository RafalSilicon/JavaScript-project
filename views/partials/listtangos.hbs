<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="four wide">Tango</th>
      <th class="four wide">Artist</th>
      <th class="three wide">Genre</th>
      <th class="three wide">Duration</th>
     
      <th class="one wide"> </th>
      <th class="one wide"> </th>
      
    </tr>
  </thead>
<tbody>
    {{#each tanda.melodies}}
    <form class = "ui stacked segment form" action="/tandas/{{../tanda.id}}/updatemelody/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input placeholder="Title" type="text" size="30" name="title" autofocus required value = "{{title}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Artist" type="text" size="30" name="artist" required value = "{{artist}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Genre" type="text" name="genre" required value = "{{genre}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Duration" type="time" name="duration" required value = "{{duration}}">
        </span>
      </td>
      <td class="center aligned">
        
        <button class="ui submit icon button" style="background-color: transparent;"><i class="ui blue pencil icon alternate"></i></button>

      </td>
      <td class="center aligned">
        
        <a href="/tanda/{{../tanda.id}}/deletemelody/{{id}}" class="ui trash blue icon delmelody">
          <i class="ui trash icon"></i>
        </a>
      </td>  
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>
<p>
  <span id="rating"> </span>
</p>       

  <button class="ui blue button" id="rateit">
  Rate it! <i class="star icon"></i>
</button>

{{/if}}
{{#unless tanda.melodies}}
  <h3 class="ui center aligned message">What would you like to dance?  Start adding some tangos!</h3>
{{/unless}}