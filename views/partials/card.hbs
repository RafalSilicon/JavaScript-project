<div class="ui card" id ="{{name}}">
  <div class="image">
    <img src="{{image}}">
  </div>
  <div class="content">
    <a class="header">{{fullname}}</a>
    <div class="meta">
      <span class="date">Joined in {{joined}} year</span>
    </div>
    <div class="meta">
      <span class="date">{{calcYears joined}} years in the team</span>
    </div>
    <div class="description">
      {{name}} is a {{career}} in {{city}}
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      {{mates}} Fans
    </a>
  </div>
</div>